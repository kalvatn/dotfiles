#!/bin/bash

set -e

source "$HOME/.functions"
CWD="$(get_script_dir "${BASH_SOURCE[0]}")"

# ruby support (vim-nox), clipboard support (vim-gtk)
if ! command -v vim &> /dev/null; then
  sudo apt-get install -y vim-nox vim-gtk
else
  info "vim is already installed"
fi


ln -fs "$CWD/.vim" "$HOME"
ln -fs "$CWD/.vim/.vimrc" "$HOME"
