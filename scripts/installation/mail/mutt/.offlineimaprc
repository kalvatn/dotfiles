[general]
ui = ttyui
accounts = gmail
pythonfile = /home/kalvatn/dotfiles/scripts/installation/mail/mutt/secret.py
fsync = False

[Account gmail]
localrepository = gmail_local
remoterepository = gmail_remote
status_backend = sqlite
postsynchook = notmuch new

[Repository gmail_remote]
maxconnections = 3
type = Gmail
auth_mechanisms = LOGIN
remotehost = imap.gmail.com
remoteuser = jonterje.kalvatn@gmail.com
remotepasseval = get_password('mail', 'jonterje.kalvatn@gmail.com')
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
realdelete = no

nametrans = lambda folder: {
    'INBOX'             : 'inbox',
    '[Gmail]/Drafts'    : 'drafts',
    '[Gmail]/Sent Mail' : 'sent',
    '[Gmail]/Starred'   : 'starred',
    '[Gmail]/Important' : 'important',
    '[Gmail]/Spam'      : 'spam',
    '[Gmail]/Trash'     : 'trash',
    '[Gmail]/All Mail'  : 'archive'
  }.get(folder, folder)

folderfilter = lambda folder: folder not in [
    '[Gmail]/Spam',
    '[Gmail]/All Mail'
  ]

[Repository gmail_local]
type = Maildir
localfolders = ~/.mail/gmail
sep = /
restoreatime = no
nametrans = lambda folder: {
    'inbox'     : 'INBOX',
    'drafts'    : '[Gmail]/Drafts',
    'sent'      : '[Gmail]/Sent Mail',
    'starred'   : '[Gmail]/Starred',
    'important' : '[Gmail]/Important',
    'spam'      : '[Gmail]/Spam',
    'trash'     : '[Gmail]/Trash',
    'archive'   : '[Gmail]/All Mail',
  }.get(folder, folder)

[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"
