set editor = `echo \$EDITOR`
set header_cache = ~/.cache/mutt/header_cache/
set message_cachedir = ~/.cache/mutt/message_cachedir/
unset imap_passive
set imap_keepalive = 300
set mail_check = 120

set realname = "Jon Terje Tvergrov Kalvatn"
set signature = "$realname"
set sort=threads
set sort_aux=last-date-received
set fast_reply=yes
set include=yes

# speed up folder switch
set sleep_time = 0

auto_view text/html
alternative_order text/plain text/enriched text/html
set mailcap_path 	= ~/.mutt/mailcap
macro attach 'V' "<pipe-entry>cat >/tmp/mail.html && google-chrome /tmp/mail.html && rm /tmp/mail.html<enter>"

folder-hook imaps://imap.gmail.com/ "source ~/.mutt/accounts/gmail_jonterje_kalvatn"
folder-hook imaps://mail.sportradar.com/ "source ~/.mutt/accounts/sportradar"

source ~/.mutt/accounts/gmail_jonterje_kalvatn
