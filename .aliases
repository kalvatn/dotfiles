#!/bin/bash

function _ls() {
  if [[ -t 1 ]]; then
    # paginate output
    command ls -F --color=always "$@" | less -XFR
  else
    # do not paginate if piping output to something else
    command ls -F --color=always "$@"
  fi
}
alias ls=_ls
alias sl='ls'
alias ll='ls -l'
alias la='ll -A'
alias l='ls -CF'

alias grep='grep --color=always'
alias igrep='grep -i'
alias fgrep='fgrep --color=always'
alias egrep='egrep --color=always'

alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

alias nslisten='netstat -plan | grep LISTEN'

_follow() {
  clear
  if [ -z "$2" ]; then
    tail -F -n100 "$1" 2> /dev/null
  else
    tail -F -n "$1" "$2" 2> /dev/null
  fi
}
alias follow=_follow

