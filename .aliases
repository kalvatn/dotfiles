#!/bin/bash

ls() {
    if [[ -t 1 ]]
    then
        #paginate ls output with less
        command ls -F --color=always "$@" | less -XFR
    else
        # don't pipe to less if piping output to something else
        command ls -F --color=always "$@"
    fi
}
alias ls=ls
alias sl='ls'
alias ll='ls -l'
alias la='ll -A'

alias grep='grep --color=auto'
alias igrep='grep -i'

tmux_attach() {
    tmux attach -dt "$1"
}
tmux_new() {
    tmux new -s "$1"
}
alias ta=tmux_attach
alias tl="tmux ls"
alias tn=tmux_new


