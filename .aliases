alias nslisten='netstat -plan | grep LISTEN'

follow() {
  clear
  if [ -z "$2" ]; then
    tail -F -n100 "$1" 2> /dev/null
  else
    tail -F -n "$1" "$2" 2> /dev/null
  fi
}
alias follow=follow

